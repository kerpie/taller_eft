<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.androidheroes.library.BookIndexFragment"
        android:id="@+id/books_fragment"
        android:tag="book_index_tag"/>
    <fragment
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:name="com.androidheroes.library.CategoriesFragment"
        android:id="@+id/categories_fragment"
        android:layout_gravity="start"
        android:tag="category_index_tag"/>
</android.support.v4.widget.DrawerLayout>